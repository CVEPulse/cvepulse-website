rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Subscribers - write only from functions (authenticated)
    match /subscribers/{email} {
      allow read: if false;
      allow write: if false; // Only cloud functions can write
    }
    
    // Leads - write only from functions
    match /leads/{leadId} {
      allow read: if false;
      allow write: if false;
    }
    
    // KEV data - read only for public stats
    match /kev_data/{docId} {
      allow read: if docId == 'latest_stats';
      allow write: if false;
    }
    
    // Activity log - admin only
    match /activity_log/{logId} {
      allow read, write: if false;
    }
  }
}
