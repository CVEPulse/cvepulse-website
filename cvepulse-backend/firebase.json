{
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/subscribe",
        "function": "subscribe"
      },
      {
        "source": "/api/unsubscribe",
        "function": "unsubscribe"
      },
      {
        "source": "/api/lead",
        "function": "lead"
      },
      {
        "source": "/api/stats",
        "function": "stats"
      }
    ]
  }
}